@import "prefix.styl"
@import url('http://fonts.googleapis.com/css?family=Ubuntu+Mono:400,400italic|Voces|Droid+Sans:400,700|Pompiere|Poiret+One|Waiting+for+the+Sunrise|Ovo|Julius+Sans+One|Open+Sans:300italic,400italic,400|Pontano+Sans')
@import url('http://fonts.googleapis.com/css?family=Nobile|Julius+Sans+One|Inconsolata')

// Vars
nav_bg = #2a2a2a
blu = #3BAFDA

nav_color = rgba(132, 147, 163, 1)
nav_color_2 = #3BAFDA
light_gray_1 = #F5F7FA
light_gray_2 = #E6E9ED

dark_gray_1 = #656D78
dark_gray_2 = #434A54
sweet_green = rgb(26, 188, 156)

*
	box-sizing(border-box)
	default_values()

body
	background-color #fff
	text-align center
	font-family 'Open Sans'

header
	// border 1px solid red
	h1
		font-size 2em
		padding 1em
		color dark_gray_2

.box
	// border 1px solid red
	max-width 400px
	text-align left
	margin-top 2em
	padding 0.5em 1em
	border-radius(0.5em)
	box-shadow(0 0 0.5em darken(light_gray_2, 10))
	h2
		font-size 1.2em
		padding 0.5em
		text-align center
		color dark_gray_2
	input, label
		// border 1px solid green
		display block
		text-align left
		width 100%
		margin 0.25em auto
		padding 0.5em
		border-radius(3px)
	label
		padding 0.5em 0
	input
		outline none
		border thin solid sweet_green
		color #2c3e50
	input[type="submit"]
		text-align center
		margin 1em auto 0.5em auto
		background-color #1abc9c
		cursor pointer







