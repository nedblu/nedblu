// Screen for iPad 1, 2, 3, 4 & mini, Nexus 7...
@media screen and (max-width: 768px)
	// Navigation ...
	.nav-bar
		border-bottom none
	.bluTitle
		font-weight 600
	.nav-menu
		color #666
		text-shadow 0px 0px 1px dark_gray_2
		font-size 1.4em
		padding 0.6em 0em
		float right
		display block
		cursor pointer
	.fs1:before
		font-size 1.6em
		padding 0em 0.5em
	
	.nav-list
		float left
		width 100%
		overflow hidden
		background-color darken(light_gray_1, -2)
		border-bottom 2px solid darken(dark_gray_1,-40)
		height 0

	.nav-open
		height auto

	.nav-list li
		width 50%

	/* EQUIPO */
	.member
		width 260px

@media screen and (max-width: 480px)
	.img_box
		background-color red
		display none !important
	.data_box
		width 100% !important
	.fb-like
		display block
		padding 0 1em
	.twitter-follow-button
