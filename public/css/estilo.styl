		input
			font-family 'Voces', cursive
			background-color light_gray_1
			border 2px solid sweet_green
			border-radius(0.2em)
			color #2c3e50
			padding 0.3em 0.5em
			outline none
			width 100%
	.box-contact-message
		margin-top 1em
		textarea
			font-family 'Voces', cursive
			background-color light_gray_1
			border 2px solid sweet_green
			border-radius(0.2em)
			color #2c3e50
			padding 0.3em 0.5em
			outline none
			maxlength 140
