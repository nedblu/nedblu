	padding 0 0.5em 2em 0.5em
	.box-contact-name
		margin 1em 0
		input
			font-family 'Voces', cursive
			background-color light_gray_1
			border 2px solid sweet_green
			border-radius(0.2em)
			color #2c3e50
			padding 0.3em 0.5em
			outline none
			width 100%
	.box-contact-email
		// border 2px solid sweet_green
