		border 4px solid #ccc
		box-shadow(0px 0px 0.5em #ccc)
		height auto
		border-radius(50%)
		display block
	.member-data
		padding 0.25em 0
		color dark_gray_2
		.member-name, .member-job, .member-twitter
			padding 0.15em 0
		.member-name
			font-weight 200
		.member-job
			font-size 0.9em
		.member-twitter
			padding 0.4em 0
			font-family 'Voces', cursive
			font-weight 200
			a
				color sweet_green
		.arroba
			color sweet_green
			margin-right 1px
.member-data
	text-align center
