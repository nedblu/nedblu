// Vars
nav_bg = #2a2a2a
blu = #3BAFDA

nav_color = rgba(132, 147, 163, 1)
nav_color_2 = #3BAFDA
light_gray_1 = #F5F7FA
light_gray_2 = #E6E9ED

dark_gray_1 = #656D78
dark_gray_2 = #434A54
sweet_green = rgb(26, 188, 156)

*
	box-sizing(border-box)
	default_values()

body
	background-color light_gray_2

ul
	list-style none

a
	text-decoration none
	color #222

.fs0:before
	font-size 1.1em
	color sweet_green

[data-icon]:before
	font-family 'menu'
	content attr(data-icon)
	speak none
	font-weight normal
	font-variant normal
	text-transform none
	line-height 1
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

// Navigation ...
.nav-bar
	width 100%
	background-color light_gray_1
	border-bottom 2px solid darken(dark_gray_1,-40)
	position fixed
	z-index 1000


.nav-hold
	overflow hidden
	max-width 900px

.nav-logo
	color dark_gray_1
	padding 0.4em 0.5em
	font-size 1.6em
	float left
	display block
	letter-spacing 1px
	font-family 'Voces', cursive
	font-weight normal
	text-shadow 0px 0px 0.1em dark_gray_1 /* testing */

.bluTitle
	color sweet_green
	font-size 1em
	letter-spacing 2px
	text-shadow 0px 0px 0.1em dark_gray_1 /* testing */

.nav-list
	float right
	li
		float left
		a
			display block
			// border 1px solid red
			font-size 1.2em
			padding 0.8em 0.5em
			color darken(dark_gray_1,-10)
			font-family 'Pontano Sans', sans-serif

			transition(all 0.5s ease)
			&:hover
				color #666

.nav-menu
	display none

// END NAVIGATION ...

// TITLES
.sec-title
	text-align center
	font-size 2.5em
	padding 1em 0
	color dark_gray_2
	font-family 'Inconsolata', sans-serif
	font-weight 200
	letter-spacing 0.2em
	// text-shadow 2px 2px 2px #888
// END TITLES

// SERVICIOS
/* SERVICIOS... */
#bg_servicios
	width 100%
	background-color light_gray_2
	padding-bottom 2em
	.nedblu
		figure
			text-align center
			img
				width 90%
				max-width 800px
				height auto
			figcaption
				border-right 4px solid #444
				width 90%
				max-width 800px
				text-align right
				color dark_gray_2
				font-family 'Poiret One', cursive
				font-size 2em
				font-style italic
				padding 0.25em 0.25em 0.25em 0
				margin 0.5em auto 0.5em auto
		#flex-container
			width 90%
			max-width 800px

			display -webkit-flex
			display -ms-flexbox
			display flex

			-webkit-flex-flow column wrap
			flex-flow column wrap

			-webkit-justify-content flex-start
			-moz-box-pack flex-start
			-ms-flex-pack start
			justify-content flex-start
			.service-item
				margin 0
				padding 0.5em 0
				max-width 480px
				font-family 'Open Sans', serif
				color sweet_green
				&:nth-child(odd)
					text-align left
				&:nth-child(even)
					text-align right
				
				// BORRAR...
				.img_box
					width 100px
					height auto
					display inline-block
					text-align center
					vertical-align middle
					img
						width 100%
						height auto
						padding 0.5em
					.img_2
						width 70%
					.img_3
						padding 0
				.data_box
					width 76%
					padding 0.5em
					// border 1px solid green
					display inline-block
					vertical-align middle
				// END BORRAR...
				
				h3
					font-size 1.4em
				p
					color dark_gray_2
			.self
				-webkit-align-self flex-end
				-moz-align-self flex-end
				-ms-flex-item-align flex-end
				align-self flex-end
/* END SERVICIOS */

/* PORTAFOLIO */
#bg_portafolio
	background-color light_gray_1
	padding-bottom 1em
	.portafolio
		max-width 900px
		padding-bottom 1em
		display -webkit-flex
